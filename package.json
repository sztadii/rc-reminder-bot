{
  "name": "rc-reminder-bot",
  "author": "sztadii",
  "scripts": {
    "start-dev": "npm run env-file-verification && npm run exec-dev",
    "start-prod": "npm run env-file-verification && npm run build-and-pack && npm run exec-prod",
    "env-file-verification": "node env-file-verification.js",
    "build-and-pack": "npm run clean && npm run build && npm run pack && :",
    "clean": "rm -rf dist && rm -rf lib",
    "pack": "ncc build lib/index.js",
    "build": "tsc",
    "exec-dev": "ts-node-dev --respawn --transpileOnly -r dotenv/config src/index.ts",
    "exec-prod": "NODE_ENV=production node -r dotenv/config dist/index.js",
    "format": "prettier --ignore-path .gitignore --write '**/*.{ts,md,json}'",
    "lint": "npm run lint-scripts && npm run lint-names",
    "lint-scripts": "eslint './src/**/*.ts' --ext='.ts' --ignore-path .gitignore --color --max-warnings 0 --fix",
    "lint-names": "file-naming-enforcer type=kebabCase folder=./src",
    "test-watch": "jest --silent --watch",
    "test": "jest --silent"
  },
  "license": "ISC",
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@octokit/rest": "^18.0.0",
    "@octokit/types": "^5.0.0",
    "axios": "0.18.1",
    "dotenv": "^8.2.0",
    "lodash": "^4.17.19",
    "moment": "^2.26.0",
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-typescript": "^7.10.1",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "@zeit/ncc": "^0.22.3",
    "babel-jest": "^26.0.1",
    "eslint": "^7.2.0",
    "eslint-plugin-jest": "^23.13.2",
    "file-naming-enforcer": "^1.1.7",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.10",
    "prettier": "^2.0.5",
    "ts-node-dev": "^1.0.0-pre.48"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run build-and-pack",
      "git add dist"
    ],
    "*.{ts,md,json}": [
      "npm run format"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(js|ts)$": "babel-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts?$"
  }
}
