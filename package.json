{
  "name": "rc-reminder-bot",
  "author": "sztadii",
  "private": true,
  "scripts": {
    "start-dev": "npm run env-file-verification && npm run exec-dev",
    "start-prod": "npm run env-file-verification && npm run build-and-pack && npm run exec-prod",
    "env-file-verification": "node env-file-verification.js",
    "rebuild": "npm run clean && npm run build",
    "clean": "rm -rf lib",
    "build": "tsc --project tsconfig.build.json",
    "types-check": "tsc",
    "exec-dev": "ts-node-dev --respawn --transpile-only -r dotenv/config src/index.ts",
    "exec-prod": "NODE_ENV=production node -r dotenv/config dist/index.js",
    "format": "prettier --ignore-path .gitignore --write \"**/*.{ts,md,json}\"",
    "lint": "npm run lint-scripts && npm run lint-names && npm run lint-types",
    "lint-scripts": "eslint \"./src/**/*.ts\" --ext=\".ts\" --ignore-path .gitignore --color --max-warnings 0 --fix",
    "lint-names": "file-naming-enforcer type=kebabCase folder=./src",
    "lint-types": "type-coverage",
    "test-watch": "jest --silent --watch",
    "test": "jest --silent",
    "semantic-release": "semantic-release"
  },
  "license": "ISC",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@octokit/rest": "^18.0.4",
    "@octokit/types": "^5.4.1",
    "axios": "0.21.1",
    "date-fns": "^2.21.1",
    "dotenv": "^8.2.0",
    "lodash": "^4.17.20",
    "typescript": "^3.9.7"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.1",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "babel-jest": "^26.3.0",
    "eslint": "^7.7.0",
    "eslint-plugin-jest": "^23.20.0",
    "file-naming-enforcer": "^1.1.8",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.2.13",
    "prettier": "^2.1.1",
    "semantic-release": "^17.4.4",
    "ts-node-dev": "^1.0.0-pre.61",
    "type-coverage": "^2.19.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint"
    ],
    "*.{ts,md,json}": [
      "npm run format"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(js|ts)$": "babel-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts?$"
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "none",
    "semi": false,
    "printWidth": 100
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "jest"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "env": {
      "node": true,
      "jest": true,
      "es6": true
    },
    "rules": {
      "no-console": "off"
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime",
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "typeCoverage": {
    "atLeast": 98,
    "strict": true
  },
  "version": "0.0.0-development",
  "repository": {
    "type": "git",
    "url": "https://github.com/sztadii/rc-reminder-bot.git"
  },
  "engines": {
    "node": "14.20.0"
  }
}
