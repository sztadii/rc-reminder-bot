{
  "name": "rc-reminder-bot",
  "author": "sztadii",
  "scripts": {
    "start": "npm run build && npm run exec",
    "start-prod": "npm run build && npm run exec-prod",
    "start-ci": "npm run build && npm run exec-ci",
    "build": "tsc",
    "exec": "node -r dotenv/config dist/index.js",
    "exec-prod": "NODE_ENV=production node -r dotenv/config dist/index.js",
    "exec-ci": "NODE_ENV=production node dist/index.js",
    "format": "prettier --ignore-path .gitignore --write '**/*.{ts,md,json}'",
    "lint": "eslint './src/**/*.ts' --ext='.ts' --ignore-path .gitignore --color --max-warnings 0 --fix",
    "test": "jest --silent"
  },
  "license": "ISC",
  "dependencies": {
    "@octokit/rest": "^18.0.0",
    "@octokit/types": "^5.0.0",
    "axios": "0.18.1",
    "dotenv": "^8.2.0",
    "moment": "^2.26.0",
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-typescript": "^7.10.1",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "babel-jest": "^26.0.1",
    "eslint": "^7.2.0",
    "eslint-plugin-jest": "^23.13.2",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.10",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint"
    ],
    "*.{ts,md,json}": [
      "npm run format"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(js|ts)$": "babel-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts?$"
  }
}
